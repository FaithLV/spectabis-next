<UserControl 
    xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    x:Class="SpectabisUI.Controls.GameTileView.GameTileView">
    <Grid Name="TileControlGrid"> 
 
        <Image 
            Name="BoxArtImage" 
            HorizontalAlignment="Center"
            Stretch="Fill"
        />

        <Rectangle 
            Opacity = "0.6" 
            Fill="Black"
            IsVisible = "{Binding ShowActiveEffect}"
        />

        <TextBlock 
            Text="{Binding Title}" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="25,0,25,25"
            FontSize="14"
            Foreground = "White"
            TextWrapping = "Wrap"
            TextAlignment = "Center"
            IsVisible = "{Binding ShowActiveEffect}"
        />

    </Grid>
</UserControl>
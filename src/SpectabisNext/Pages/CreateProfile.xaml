<UserControl
    xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    x:Class="SpectabisNext.Pages.CreateProfile"
    >

    <Grid RowDefinitions="65, *" Margin="5">
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30">Add Game</TextBlock>
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Margin="5">
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Image x:Name="BoxArtImage" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBox/>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
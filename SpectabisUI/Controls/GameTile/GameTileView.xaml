<UserControl xmlns="https://github.com/avaloniaui">
    <Grid Name="TileControlGrid">

        <Image 
            Name="BoxArtImage" 
            HorizontalAlignment="Center"
            Stretch="Fill"
        />

        <Rectangle 
            Name="HoverOverlay" 
            Opacity = "0.6" 
            Fill="Black"
            IsVisible = "False"
        />

        <TextBlock 
            Name="BoxTitle" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="25,0,25,25"
            FontSize="14"
            Foreground = "White"
            TextWrapping = "Wrap"
            TextAlignment = "Center"
            IsVisible = "False"
        />

    </Grid>
</UserControl>